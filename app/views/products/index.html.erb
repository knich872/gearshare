<div class="container my-2">
  <div class="row mb-4">
    <h1 class="mt-2">Available products in your area</h1>
    <%= form_with url: products_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control search",
            placeholder: "Search by keywords"
        %>
      <%= submit_tag " Search ", name: "", class: "btn btn-round" %>
    <% end %>
  </div>
  <%= render "categories" %>
  <div class="row d-flex flex-wrap">
    <% @products.each do |product| %>
      <div class="col-xl-3 col-lg-4 col-md-6 col-sm-10 my-4">
        <%= render product %>
      </div>
    <% end %>
    <div class="pag-bar mt-3 d-flex justify-content-center">
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
