<div class="house-details">
        <div class="house-title">
            <h1><%= @product.name %></h1>
            <div class="row">
                <div>
                    <p>Location: Placeholder</p>
                </div>
            </div>
        </div>
        <div class="gallery">
            <%# <div class="gallery-img-1">
            <img src="https://4.img-dpreview.com/files/p/articles/4435013201/images/nikond700_front-001.jpeg"></div>
            <div><img src="https://www.dpreview.com/files/p/articles/4435013201/images/features/D700_Sealed_back_l.jpeg"></div>
            <div><img src="https://camera10.me/blog/wp-content/uploads/2020/06/20200612-DSCF8283-3-1776x1184.jpg"></div>
            <div><img src="https://img.ponparemall.net/imgmgr/41/00112541/0/hu2/1050020597.jpg?ver=1"></div>
            <div><img src="https://www.imaging-resource.com/PRODS/D700/ZYFRONT-LG.JPG"></div> %>
        <% @product.photos.each_with_index do |photo, index| %>
          <% if index == 0 %>
            <div class="gallery-img-1">
              <%= cl_image_tag photo.key, crop: :fill %>
            </div>
          <% else %>
            <div>
              <%= cl_image_tag photo.key, crop: :fill %>
            </div>
          <% end %>
        <% end %>
        </div>
        <div class="small-details">
            <h2>Details</h2>
            <p><%= @product.description %></p>
            <h4>$ <%= @product.rental_price_day %> / day</h4>
        </div>
        <hr class="line">
        <form class="check-form">
            <div>
                <label>Start Date</label>
                <input type="text" placeholder="Add date">
            </div>
            <div>
                <label>End Date</label>
                <input type="text" placeholder="Add date">
            </div>
            <button type="submit">Rent It!</button>
        </form>

        <div class="map">
            <h3>Location on map</h3>
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d21221.676224044128!2d-122.45917885570059!3d37.75203368896406!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80859a6d00690021%3A0x4a501367f076adff!2sSan%20Francisco%2C%20CA%2C%20USA!5e0!3m2!1sen!2sin!4v1641145357317!5m2!1sen!2sin" width="600" height="450" style="border:0;"></iframe>
        </div>

        <hr class="line">

        <div class="rentor">
            <img src="https://kitt.lewagon.com/placeholder/users/ssaunier">
            <div>
                <h2>Rent from Jimbo</h2>
            </div>
        </div>
    </div>
