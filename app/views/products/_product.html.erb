<div class="card shadow text-center">
  <div id="carouselExampleCrossfade" class="carousel slide carousel-fade p-1" data-bs-interval="3000" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= cl_image_tag("#{product.photos.first.key}", width: 250, height: 200, crop: :fill, class: "rounded-2 d-block w-100") %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag("#{product.photos.second.key}", width: 250, height: 200, crop: :fill, class: "rounded-2 d-block w-100") %>
      </div>
      <div class="carousel-item">
        <%= cl_image_tag("#{product.photos.third.key}", width: 250, height: 200, crop: :fill, class: "rounded-2 d-block w-100") %>
      </div>
    </div>
  </div>

  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text text-muted">Â¥<%= product.rental_price_day.to_i %> per day</p>
    <%= link_to "View this product", product_path(product), class: "btn btn-dark" %>
  </div>
</div>

