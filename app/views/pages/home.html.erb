<div class="banner">
  <div id="landing" class="container">
    <div class="row justify-content-center my-4 py-4">
      <div class="col-6 text-center my-4 py-4">
        <h1>Welcome to <%= link_to "", products_path, class: "fa-solid fa-handshake-simple btn-red" %><strong> Gear</strong>Share</h1>
      </div>
      <%= form_with url: products_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control search",
              placeholder: "Search for products in your area"
          %>
        <%= submit_tag " Search ", name: "", class: "btn" %>
      <% end %>
    </div>
  </div>
</div>
